{
  "manifest_version": 3,
  "name": "Vocab Builder",
  "version": "1.0.0",
  "description": "Lookup word definitions and save them to Anki.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://api.dictionaryapi.dev/*",
    "http://127.0.0.1:8765/*"
  ],
  "background": {
    "service_worker": "src/worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ]
}


